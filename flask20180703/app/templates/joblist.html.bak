<html>
<body>
<!--引用面包导航模板添加下面面包导航内容-->
{% extends "base.html" %}
{% block title %}
             <a href="/joblist/">工单列表</a>
{% endblock %}
{% block content %}

<!--引用面包导航模板添加下面面包导航内容-->
<div class="col-sm-12">
<br />
<br />
<!-- 机房信息列表-->
<table class="table table-striped table-bordered table-hover " id="editable">
<thead>
    <tr>
        <th class="text-center">申请人</th>
        <th class="text-center">工单类型</th>
        <th class="text-center">申请时间</th>
        <th class="text-center">工单状态</th>
        <th class="text-center">操作</th>
    </tr>
</thead>
<tbody>
{% for i in result['msg'] %}   
        <tr class="gradeX">
                <td class="text-center">{{ i.apply_persion}}</td>
                <td class="text-center">
			{% if i.apply_type == 0 %}用户权限
			{% elif i.apply_type == 1 %}数据库操作
			{% elif i.apply_type == 2 %}服务器配置
			{% elif i.apply_type == 3 %}其他
			{% endif %}
		</td>
                <td class="text-center">{{ i.apply_date}}</td>
		{% if i.status == 0%}
                <td class="text-center" style="color:green">申请中</td>
		{% elif i.status == 1%}
                <td class="text-center" style="color:red">处理中</td>
		{% endif%}
                <td class="text-center">
                    <button data-id="{{ i.id }}" class="btn btn-primary deal ">处理中</button>
                    <button data-id="{{ i.id }}" class="btn btn-success update ">完成</button>
                    <button data-id="{{ i.id }}" class="btn btn-info detail ">详情</button>
                </td>
            </td>
         </tr>
{% endfor %} 
 </tbody>
</table>
<!-- 工单信息列表end-->

<!--处理详情模态窗-->
<div class="modal fade" id='detailModel'>
  <div class="modal-dialog">
    <div class="modal-content">
    <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	     <h4 class="modal-title">详情</h4>
    </div><!--header-->
    <div class="modal-body">
        <input id="jobid" name="id" hidden>
        <div class="form-group"> 
            <label class="control-label">工单处理详情</label>
			<div class="controls">
                <textarea id="deal_desc" name="deal_desc" style="margin: 0px; width: 491px; height: 163px;"></textarea>
		    </div> 
        </div> <!--detail apply desc end-->

    </div><!--body-->
    <div class="modal-footer">
      	<button type="button" class="btn btn-primary update">确定</button>
      	<button type="button" class="btn btn-default update-cancel" data-dismiss="modal">关闭</button>
   </div><!--footer-->

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>

$('#editable').DataTable({
        "bDestroy":true, //加上这个，一旦datatable的数据有增加或者删除，会销毁原有的，重新获取
        "language": {
                "lengthMenu": "每页 _MENU_ 条记录",
                "zeroRecords": "没有找到记录",
                "sInfo": "第 _PAGE_ 页 ( 总共 _PAGES_ 页 ),显示第 _START_ 至 _END_ 项(总共 _TOTAL_ 项)",
                "infoEmpty": "无记录",
                "infoFiltered": "(从 _MAX_ 条记录过滤)",
                "sSearch": "搜索:",
                "oPaginate": {
                "sFirst": "首页",
                "sPrevious": "上一页",
                "sNext": "下一页",
                "sLast": "末页"
                } 
        },
        "order": [[ 1, "asc" ]] 
});

/*工单详情*/
$('.detail').click(function(){
    var id=$(this).attr('data-id')
    var url = "/jobdetail/?id="+id
    $.getJSON(url,function(data){
	if (data['code'] == 0){
	    result = data['msg']
            console.log(result)
         $('#detail_contents').html(result['contents'])
	}else{
	    $('#errmsg').html('fail')
	}
    })
    $('#detailModel').modal('show')
})

/*工单处理*/
$('.deal').click(function(){
    var id=$(this).attr('data-id')
    var url = "/jobupdate/?id="+id
    $.getJSON(url,function(data){
	if (data['code'] == 0){
	    result = data['result']
        console.log(result)
        window.location.reload()
	}else{
	    $('#errmsg').html('fail')
	}
    })
})

/*工单完成,弹出模态窗*/
$('.success').click(function(){
    var id=$(this).attr('data-id')
    $('#dealModel').modal('show')
    $('#jobid').val(id)
})

/*提交处理工单详情*/
$('.update').click(function(){
    var id = $('#jobid').val()
    var deal_desc = $('#deal_desc').val()
    var data = {'id':id,'deal_desc':deal_desc}
    //console.log(data)
    $.post('/jobupdate/',data,function(data){
        data = JSON.parse(data)
	    if(data["code"] == 0){
		swal({
		    title:'Congratulation',
		    text:data['result'],
		    type:'success',
		    confirmButtonText:'确定'
		    },function(){
			location.href='/joblist/'
		    })
	    }else{
		    swal('Error',data['errmsg'],'error')
	    }
	})
    return false
})
</script>

{% endblock%}

<!--引用面包导航模板添加下面面包导航内容-->
</body></html>
